<div class="container">

  <div class="row">

    <%= @articles.each do |article| %>
      <div class="col-sm-6 col-md-3 mt-3 d-flex align-items-stretch">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <%= article.title %>
            </h5>
            <p class="card-text">
              <%= article.content %>
            </p>
            <%= link_to "Lire l'article", article_path(article) %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
